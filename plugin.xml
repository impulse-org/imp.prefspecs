<?xml version="1.0" encoding="UTF-8"?>
<plugin>

   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            extensions="pfsp"
            description="Specification language for IMP preference pages"
            language="prefspecs">
      </language>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="org.eclipse.imp.prefspecs.tokenColorer.PrefspecsTokenColorer"
            language="prefspecs">
      </tokenColorer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.foldingUpdater">
      <foldingUpdater
            class="org.eclipse.imp.prefspecs.foldingUpdater.PrefspecsFoldingUpdater"
            language="prefspecs">
      </foldingUpdater>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.outliner">
      <outliner
            class="org.eclipse.imp.prefspecs.outliner.PrefspecsOutliner"
            language="prefspecs">
      </outliner>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.referenceResolvers">
      <referenceResolver
            class="org.eclipse.imp.prefspecs.referenceResolvers.PrefspecsReferenceResolver"
            language="prefspecs">
      </referenceResolver>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contentProposer">
      <proposer
            class="org.eclipse.imp.prefspecs.contentProposer.PrefspecsContentProposer"
            language="prefspecs">
      </proposer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.hoverHelper">
      <hoverhelper
            class="org.eclipse.imp.prefspecs.hoverHelper.PrefspecsHoverHelper"
            language="prefspecs">
      </hoverhelper>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.documentationProvider">
      <docProvider
            class="org.eclipse.imp.prefspecs.documentationProvider.PrefspecsDocumentationProvider"
            language="prefspecs">
      </docProvider>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="org.eclipse.imp.prefspecs.parser.PrefspecsParseController"
            language="prefspecs">
      </parser>
   </extension>
   <extension
         id="imp.nature"
         name="prefspecs Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="org.eclipse.imp.prefspecs.org.eclipse.imp.prefspecs.builder">
      </builder>
      <runtime>
         <run
               class="org.eclipse.imp.prefspecs.builders.PrefspecsNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="problem"
         name="prefspecs Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.jdt.core.IJavaProject"
            adaptable="false"
            nameFilter="*"
            id="org.eclipse.imp.prefspecs.projectContextMenu">
         <action
               label="Enable prefspecs Builder"
               tooltip="Enable the prefspecs builder for this project"
               class="org.eclipse.imp.prefspecs.actions.EnableNature"
               id="org.eclipse.imp.prefspecs.actions.enableNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         id="org.eclipse.imp.prefspecs.builder"
         name="prefspecs builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.eclipse.imp.prefspecs.builders.PrefspecsBuilder">
            <parameter
                  name="foo"
                  value="bar">
            </parameter>
         </run>
      </builder>
   </extension>
   <extension
         id="imp.nature"
         name="prefspecs Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="org.eclipse.imp.prefspecs.org.eclipse.imp.prefspecs.builder">
      </builder>
      <runtime>
         <run
               class="org.eclipse.imp.prefspecs.builders.PrefspecsNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="org.eclipse.imp.prefspecs.builder.problem"
         name="prefspecs Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         id="ext.org.eclipse.imp.prefspecs.preferencesDialog"
         name="ext.prefspecs preferencesDialog"
         point="org.eclipse.ui.preferencePages">
      <page
            name="prefspecs preferencesDialog"
            class="org.eclipse.imp.prefspecs.preferencesDialog.PrefspecsPreferencesDialog"
            id="org.eclipse.imp.prefspecs.preferencesDialog">
      </page>
   </extension>
   
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.eclipse.imp.preferences.PreferencePage"
            id="org.eclipse.imp.runtime.preferencePage"
            name="IMP"/>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer class="org.eclipse.imp.preferences.PreferenceInitializer"/>
   </extension>
</plugin>
